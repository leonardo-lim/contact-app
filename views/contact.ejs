<div class="row vh-100 d-flex align-items-center text-center m-0 bg-dark text-white">
  <div class="col-8 m-auto">
    <h1>Contact</h1>

    <a href="contact/add" class="btn btn-primary"><i class="bi bi-plus"></i> Add contact</a>

    <% if (message.length > 0) { %>
      <div class="alert alert-success w-50 m-auto p-2 mt-2" role="alert"><%= message %> </div>
    <% } %>

    <% if (contacts.length) { %>
      <table class="table table-dark mt-3">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Number</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% contacts.forEach((contact, idx) => { %>
            <tr>
              <th scope="row"><%= ++idx %></th>
              <td><%= contact.name %></td>
              <td><%= contact.email %></td>
              <td><%= contact.number %></td>
              <td>
                <a href="/contact/<%= contact.id %>" class="btn btn-success badge badge-success"><i class="bi bi-info-circle"></i> Detail</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <div class="alert alert-warning w-50 m-auto mt-2" role="alert">You have no contact</div>
    <% } %>
  </div>
</div>